{
  "name": "rendition",
  "version": "4.27.5",
  "description": "React components library",
  "repository": {
    "type": "git",
    "url": "https://github.com/resin-io-modules/rendition"
  },
  "license": "Apache-2.0",
  "main": "./dist/index.js",
  "types": "./typings/rendition.d.ts",
  "scripts": {
    "start": "start-storybook -p 6006",
    "build": "rimraf dist && tsc && npm run build:docs",
    "build:docs": "node ./scripts/generateDocs.js",
    "build:storybook": "build-storybook -o .out",
    "test": "npm run lint && npm run jest",
    "jest": "jest __tests__ --maxWorkers=4",
    "eslint": "eslint src __tests__",
    "eslint-fix": "eslint src __tests__ --fix",
    "tslint": "tslint -t stylish \"src/**/*.ts\" \"src/**/*.tsx\" \"typings/**/*.d.ts\"",
    "tslint-fix": "tslint -t stylish --fix \"src/**/*.ts\" \"src/**/*.tsx\" \"typings/**/*.d.ts\"",
    "lint": "npm run eslint && npm run tslint",
    "precommit": "lint-staged",
    "prepack": "npm run build",
    "prettify-js": "prettier --config .prettierrc-js --write \"src/**/*.js\" \"test/**/*.js\"",
    "prettify-ts": "prettier --config .prettierrc-ts --write \"src/**/*.ts\" \"src/**/*.tsx\" \"typings.d.ts\"",
    "prettify": "npm run prettify-js && npm run eslint-fix && npm run prettify-ts && npm run tslint-fix",
    "deploy": "npm run build:storybook && gh-pages -d .out"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^3.4.10",
    "@storybook/react": "^3.3.13",
    "@types/jest": "^22.1.4",
    "babel-plugin-transform-react-jsx": "^6.23.0",
    "babel-preset-es2015": "^6.24.0",
    "babel-preset-stage-3": "^6.24.1",
    "css-loader": "^0.28.5",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint": "^4.13.1",
    "eslint-config-standard": "^10.2.1",
    "eslint-config-standard-react": "^5.0.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-node": "^5.2.0",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-react": "^7.4.0",
    "eslint-plugin-standard": "^3.0.1",
    "gh-pages": "1.0.0",
    "git-url-parse": "^7.0.0",
    "husky": "^0.14.3",
    "jest": "^22.4.2",
    "jest-canvas-mock": "^1.0.2",
    "jsdom": "^11.6.2",
    "lint-staged": "^4.1.1",
    "match-media-mock": "^0.1.0",
    "prettier": "^1.12.1",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-test-renderer": "^16.2.0",
    "rimraf": "^2.6.2",
    "sinon": "^4.5.0",
    "storybook-readme": "^3.3.0",
    "ts-jest": "^22.4.0",
    "ts-loader": "^3.0.2",
    "ts-node": "^3.3.0",
    "tslint": "^5.9.1",
    "typescript": "^2.6.2"
  },
  "dependencies": {
    "@types/chart.js": "^2.7.14",
    "@types/color": "^2.0.0",
    "@types/grid-styled": "^3.2.0",
    "@types/json-schema": "^6.0.1",
    "@types/lodash": "^4.14.77",
    "@types/marked": "^0.3.0",
    "@types/prop-types": "^15.5.2",
    "@types/react": "^16.0.38",
    "@types/react-dom": "^16.0.4",
    "@types/react-icons": "^2.2.4",
    "@types/react-jsonschema-form": "^1.0.0",
    "@types/recompose": "^0.26.2",
    "@types/uuid": "^3.4.3",
    "ajv": "^6.2.0",
    "ajv-keywords": "^3.1.0",
    "babel-core": "^6.26.0",
    "chart.js": "^2.7.2",
    "color": "^2.0.0",
    "color-hash": "^1.0.3",
    "copy-to-clipboard": "^3.0.8",
    "grid-styled": "3.1.1",
    "lodash": "^4.17.4",
    "marked": "^0.4.0",
    "mermaid": "^8.0.0-rc.8",
    "moment": "^2.20.1",
    "react-icons": "^2.2.5",
    "react-jsonschema-form": "^1.0.0",
    "recompose": "0.26.0",
    "regex-parser": "^2.2.7",
    "resin-device-status": "^1.1.1",
    "resin-semver": "^1.3.0",
    "showdown": "^1.7.3",
    "styled-components": "^3.2.3",
    "styled-system": "^1.0.5",
    "tag-hoc": "1.0.0",
    "uuid": "^3.2.1",
    "xterm": "^3.2.0"
  },
  "lint-staged": {
    "{src, test}/**/*.js": [
      "prettier --config .prettierrc-js --write",
      "eslint --fix",
      "git add"
    ],
    "*.{ts,tsx}": [
      "prettier --config .prettierrc-ts --write",
      "tslint --fix",
      "git add"
    ]
  },
  "jest": {
    "setupTestFrameworkScriptFile": "<rootDir>scripts/setupTests.js",
    "collectCoverage": true,
    "verbose": true,
    "transform": {
      "^.+\\.tsx?$": "ts-jest",
      "^.+\\.js$": "babel-jest"
    },
    "globals": {
      "ts-jest": {
        "skipBabel": true
      }
    },
    "setupFiles": [
      "jest-canvas-mock"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "moduleDirectories": [
      "node_modules",
      "src"
    ]
  }
}
