{
  "name": "rendition",
  "version": "5.1.1",
  "description": "React components library",
  "repository": {
    "type": "git",
    "url": "https://github.com/resin-io-modules/rendition"
  },
  "license": "Apache-2.0",
  "main": "./dist/index.js",
  "types": "./typings/rendition.d.ts",
  "engines": {
    "node": ">=8.0.0",
    "npm": ">=5.7.0"
  },
  "scripts": {
    "start": "start-storybook -p 6006",
    "build": "rimraf dist && tsc && npm run build:docs",
    "build:docs": "node ./scripts/generateDocs.js",
    "generate-screenshots": "./scripts/generate-screenshots.sh",
    "build:storybook": "build-storybook -o .out",
    "test": "npm run lint && TZ='Etc/UTC' npm run jest",
    "test:local-visual": "./scripts/test-screenshots.sh",
    "test:visual": "npm run ci:screenshot -- -o .reg/current && reg-cli .reg/current __screenshots__ .reg/diff -R .reg/report.html",
    "jest": "jest __tests__ --maxWorkers=4",
    "eslint": "eslint src __tests__ .storybook",
    "eslint-fix": "eslint src __tests__ .storybook --fix",
    "tslint": "tslint -t stylish \"src/**/*.ts\" \"src/**/*.tsx\" \"typings/**/*.d.ts\"",
    "tslint-fix": "tslint -t stylish --fix \"src/**/*.ts\" \"src/**/*.tsx\" \"typings/**/*.d.ts\"",
    "lint": "npm run eslint && npm run tslint",
    "precommit": "lint-staged",
    "prepack": "npm run build",
    "prettify-js": "prettier --config .prettierrc-js --write \"src/**/*.js\" \"test/**/*.js\"",
    "prettify-ts": "prettier --config .prettierrc-ts --write \"src/**/*.ts\" \"src/**/*.tsx\" \"typings.d.ts\"",
    "prettify": "npm run prettify-js && npm run eslint-fix && npm run prettify-ts && npm run tslint-fix",
    "ci:screenshot": "STORYBOOK_MODE=screenshot storybook-chrome-screenshot --browser-timeout 100000 -p 6006",
    "deploy": "npm run build:storybook && gh-pages -d .out"
  },
  "devDependencies": {
    "@babel/core": "^7.1.2",
    "@babel/plugin-proposal-class-properties": "^7.0.0",
    "@babel/plugin-proposal-json-strings": "^7.0.0",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/plugin-syntax-import-meta": "^7.0.0",
    "@babel/plugin-transform-react-jsx": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@storybook/addon-actions": "^4.1.11",
    "@storybook/react": "^4.1.11",
    "@types/jest": "^23.3.2",
    "@types/react": "^16.8.8",
    "@types/react-dom": "^16.8.3",
    "acorn": "^6.0.7",
    "acorn-dynamic-import": "^4.0.0",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.0-beta.6",
    "css-loader": "^0.28.5",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.11.2",
    "eslint": "^4.13.1",
    "eslint-config-standard": "^10.2.1",
    "eslint-config-standard-react": "^5.0.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-node": "^5.2.0",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-react": "^7.4.0",
    "eslint-plugin-standard": "^3.0.1",
    "gh-pages": "2.0.0",
    "git-url-parse": "^7.0.0",
    "husky": "^0.14.3",
    "jest": "^24.1.0",
    "jest-canvas-mock": "^1.1.0",
    "jsdom": "^11.6.2",
    "lint-staged": "^4.1.1",
    "match-media-mock": "^0.1.1",
    "prettier": "^1.15.3",
    "react": "^16.8.5",
    "react-dom": "^16.8.5",
    "react-test-renderer": "^16.8.5",
    "reg-cli": "^0.13.0-beta.1",
    "rimraf": "^2.6.2",
    "sinon": "^4.5.0",
    "storybook-chrome-screenshot": "^1.4.0",
    "storybook-readme": "^4.0.5",
    "ts-jest": "^23.10.1",
    "ts-loader": "^5.3.0",
    "ts-node": "^8.0.2",
    "tslint": "^5.13.1",
    "tslint-config-prettier": "^1.17.0",
    "typescript": "3.2.2",
    "webpack": "^4.29.6"
  },
  "dependencies": {
    "@balena/grid-styled": "3.1.1",
    "@types/color": "^2.0.0",
    "@types/grid-styled": "^3.2.0",
    "@types/json-schema": "^6.0.1",
    "@types/lodash": "^4.14.77",
    "@types/marked": "^0.3.0",
    "@types/node": "^10.12.21",
    "@types/prop-types": "^15.7.0",
    "@types/react-icons": "^2.2.4",
    "@types/react-jsonschema-form": "^1.3.1",
    "@types/recompose": "^0.26.2",
    "@types/uuid": "^3.4.3",
    "ajv": "^6.7.0",
    "ajv-keywords": "^3.3.0",
    "balena-temen": "^0.5.5",
    "color": "^2.0.0",
    "color-hash": "^1.0.3",
    "copy-to-clipboard": "^3.0.8",
    "jellyschema": "^0.11.9",
    "lodash": "^4.17.11",
    "marked": "^0.4.0",
    "mermaid": "^8.0.0",
    "prop-types": "^15.7.2",
    "react-icons": "^2.2.5",
    "react-jsonschema-form": "^1.3.0",
    "recompose": "0.26.0",
    "regex-parser": "^2.2.7",
    "resin-semver": "^1.4.0",
    "styled-components": "^3.2.3",
    "styled-system": "^1.0.5",
    "tag-hoc": "1.0.0",
    "uuid": "^3.2.1",
    "xterm": "^3.12.0"
  },
  "lint-staged": {
    "{src, test}/**/*.js": [
      "prettier --config .prettierrc-js --write",
      "eslint --fix",
      "git add"
    ],
    "*.{ts,tsx}": [
      "prettier --config .prettierrc-ts --write",
      "tslint --fix",
      "git add"
    ]
  },
  "jest": {
    "preset": "ts-jest/presets/js-with-babel",
    "collectCoverage": true,
    "verbose": true,
    "setupFiles": [
      "jest-canvas-mock",
      "<rootDir>scripts/setupTests.js"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "moduleDirectories": [
      "node_modules",
      "src"
    ]
  }
}
