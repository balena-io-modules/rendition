{
  "compilerOptions": {
    "types": ["jest"],
    "module": "commonjs",
    "resolveJsonModule": true,
    "target": "es5",
    "outDir": "dist",
    "rootDir": "./src",
    "declaration": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": false,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "jsx": "react",
    "lib": [
      "es2019",
      "dom"
    ],
    "skipLibCheck": true,
    "paths": {
      "~/*": [
        "./src/*"
      ],
      "*": [
        "./node_modules/@types/*",
        "*"
      ]
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    ".*spec.tsx?"
  ]
}
