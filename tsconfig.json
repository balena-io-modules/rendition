{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "outDir": "dist",
    "rootDir": "./src",
    "declaration": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": false,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "keyofStringsOnly": true,
    "jsx": "react",
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "~/*": [
        "./src/*"
      ],
      "*": [
        "./node_modules/@types/*",
        "*"
      ]
    }
  }
}
